{
  "name": "let-it-snow",
  "version": "1.3.2",
  "description": "A magical snowfall extension for web pages",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "node scripts/build.js",
    "build:chrome": "vite build --mode chrome",
    "build:firefox": "vite build --mode firefox",
    "build:edge": "vite build --mode edge",
    "preview": "vite preview",
    "test": "vitest run",
    "sync-version": "node scripts/sync-version.js",
    "version": "pnpm run sync-version",
    "pack:chrome": "crx3 dist/chrome -o builds/let-it-snow-chrome.crx",
    "pack:firefox": "cd dist/firefox && zip -r ../../builds/let-it-snow-firefox.zip . && cd ../../",
    "pack:edge": "crx3 dist/edge -o builds/let-it-snow-edge.crx"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0",
    "crx3": "^2.0.0",
    "vite": "^5.0.8",
    "vitest": "^1.1.3",
    "jsdom": "^23.0.0"
  }
}
